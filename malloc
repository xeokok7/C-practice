#include <stdio.h>
#include <stdlib.h>

int main()
{
	int* nums;
	int i;

	nums = (int*)malloc(10 * sizeof(int));  // 동적 메모리 할당

	if (nums == NULL)  // 오류 방지
	{
		printf("error");

		return 1;
	}

	printf("write integer : ");

	for (i = 0; i < 10; i++)  // 정수 입력
		scanf_s("%d", &nums[i]);

	for (i = 0; i < 10; i++)  // 정수 출력
		printf("%d ", nums[i]);

	free(nums);

	return 0;
		
}
